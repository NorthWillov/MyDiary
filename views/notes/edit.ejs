<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= note.title %></h1>
        <div style="width: 40%; margin: 30px auto;">
            <form action="/<%= currentUser._id %>/notes/<%= note._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="note[title]" value="<%= note.title %>" required>
                </div>
                <div class="form-group">
                    <textarea name="note[content]" cols="100" rows="20" required><%= note.content %></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-primary btn-block">
                </div>
            </form>
            <a class="goback" href="/<%= currentUser._id %>/notes/<%= note._id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>